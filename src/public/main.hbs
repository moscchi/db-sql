<div class="container">
    <div style="display: flex;">
    <div class="col-md-7 p-3">
     <form action="http://localhost:8080/productos" method="post" enctype="application/x-www-form-urlencoded">
        <h4>Ingresar un producto</h4>
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon2">Titulo: </span>
            <input type="text" class="form-control" name="title" id="title" placeholder="Ej papita"
                aria-label="Recipient's username" aria-describedby="basic-addon2">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">Precio: $</span>
            <input type="number" id="price" class="form-control" aria-label="Amount (to the nearest dollar)" name="price">
            <span class="input-group-text">.00</span>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon3">URL de la imagen del producto:</span>
            <input type="text" class="form-control" id="thumbnail" aria-describedby="basic-addon3"
                placeholder="https://www.imagen.com/imagen" name="thumbnail">
        </div>
        <button class="btn btn-primary" type="submit" onclick="evento(event)">Enviar producto</button>
    </form>
    </div>
    <div class="col-md-5 p-3">
        <div class="chat bg-info" style="height: 100%; width: 100%;">
            <input type="text" id="username" class="col-md-3"required placeholder="Nombre...">
            <div id="output"></div>
            <div class="d-flex" style="margin: 177px 0 0 0;">
                <input type="text" id="message" style="width: 100%; position:relative;" required>
                <button id="send" class="btn btn-success">Enviar</button>
            </div>
        </div>
    </div>
    </div>
</div>
